---
import Layout from '@components/Layout.astro';
---

<Layout title="Page Not Found - How's Pot Doing?">
  <section class="not-found">
    <h1>404</h1>
    <p>This page does not exist.</p>
    <a href="/" class="btn btn-primary">Go to Homepage</a>
  </section>
</Layout>

<style>
  .not-found {
    padding: 4rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  h1 {
    font-size: 6rem;
    margin: 0;
    line-height: 1;
  }
  p {
    font-size: 1.5rem;
    margin: 0;
  }
</style>
