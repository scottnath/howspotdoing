---
const { location } = Astro.props;
import Question from './Question.astro';
import SiteTitle from '@components/SiteTitle.astro';
import Answer from '@components/Answer.astro';
---

<article itemscope itemtype="https://schema.org/FAQPage" class="meow location">
  <h1 itemprop="name"><SiteTitle title={location.data.title} /></h1>
  <p itemprop="description" class="answer-title serif-stroke"><Answer legality={location.data.legality} location={location.data.location} /></p>
  <p itemprop="lastReviewed" class="emoji-background-text">Last reviewed: {location.data.datetime}</p>
  <Question report={location.data.results.RECREATIONAL} />
  <Question report={location.data.results.RECREATIONAL_STORE} />
  <Question report={location.data.results.RECREATIONAL_GROW} />
  <Question report={location.data.results.MEDICAL} />
  <Question report={location.data.results.MEDICAL_STORE} />
  <Question report={location.data.results.MEDICAL_GROW} />
</article>
<style>
  article {
    >h1 {
      text-wrap-style: stable;
      text-align: center;
      font-size: 1.5em;
      padding: 0;
      margin: 1em 0 0 0;
    }
    [itemprop="description"] {
      text-align: center;
      font-size: 2em;
      font-weight: bold;
      padding: .5em 0;
      margin: 0;
    }
    [itemprop="lastReviewed"] {
      text-align: center;
      font-size: 1em;
      padding: 0;
      margin: 0 0 1em 0;
      color: #666;
    }
  }
</style>
