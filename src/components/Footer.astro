---
import Nav from '@components/Nav.astro';
---
<footer id="global-footer">
  <Nav />
</footer>

<style>
  #global-footer {
    padding: 2rem 1rem;
    text-align: center;

    .global-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.75rem;
    }

    .global-nav a {
      color: #00bf00;
      text-decoration: none;
    }

    .global-nav a:hover {
      text-decoration: underline;
    }

    .global-nav .sep {
      color: #888;
    }
  }
</style>
